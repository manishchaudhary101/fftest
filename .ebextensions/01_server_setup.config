files:
  # letting elasticbeanstalk know about the laravel logs
  "/opt/elasticbeanstalk/tasks/publishlogs.d/laravel-logs.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      /var/app/current/storage/logs/*.log

container_commands:
  01_composer_install:
    command: "composer.phar install --no-dev"
    cwd: /var/app/staging
  02_composer_install:
    command: "chmod +x .platform/hooks/postdeploy/01_artisan.sh"
  03_composer_install:
    command: "chmod +x .platform/hooks/postdeploy/02_server.sh"
  04_make_storage_writeable:
    command: "chmod -R 775 storage"
    cwd: /var/app/staging
    